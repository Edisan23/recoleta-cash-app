
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isCompanyMember(companyId) {
      // This rule is a placeholder. For this fake data app, we'll
      // assume any signed-in user is a member of any company.
      return isSignedIn();
    }

    // In a real app, this should check a custom claim (e.g., request.auth.token.admin == true)
    // set by a Cloud Function after the first user logs in.
    // For this example, we'll trust the client-side check that ensures only the designated admin can access admin pages.
    // Therefore, any write operation assumed to be from an admin is allowed if the user is signed in.
    function isAdmin() {
      return isSignedIn();
    }

    match /users/{userId} {
      // Admins can read any user profile, users can only read/write their own.
      allow read, update, delete: if isOwner(userId) || isAdmin();
      allow create: if isSignedIn();
    }

    match /companies/{companyId} {
      allow read: if isCompanyMember(companyId);
      allow create, update, delete: if isAdmin();

      match /settings/{settingsId} {
          allow read: if isCompanyMember(companyId);
          allow write: if isAdmin();
      }
      match /items/{itemId} {
          allow read: if isCompanyMember(companyId);
          allow write: if isAdmin();
      }
       match /benefits/{benefitId} {
          allow read: if isCompanyMember(companyId);
          allow write: if isAdmin();
      }
       match /deductions/{deductionId} {
          allow read: if isCompanyMember(companyId);
          allow write: if isAdmin();
      }

       // Payrolls can be read by the user they belong to, or by an admin.
      match /payrolls/{payrollId} {
        allow read: if isAdmin() || (isCompanyMember(companyId) && resource.data.userId == request.auth.uid);
        allow write: if isAdmin();
      }
    }
    
    // This is a collection group query, it applies to all collections named "shifts"
    match /{path=**}/shifts/{shiftId} {
        allow read: if isAdmin() || (isCompanyMember(path.split('/')[1]) && resource.data.userId == request.auth.uid);
        allow create: if isCompanyMember(path.split('/')[1]) && request.resource.data.userId == request.auth.uid;
        allow update, delete: if isAdmin() || (isCompanyMember(path.split('/')[1]) && resource.data.userId == request.auth.uid);
    }

    match /holidays/{holidayId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
