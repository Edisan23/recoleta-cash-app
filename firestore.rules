rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // This is the UID for tjedisan@gmail.com
      return request.auth.uid == 'o7bT7yEdWOdxIHgX6lszz19dl7j2';
    }

    match /users/{userId} {
      allow read, write: if isAdmin();
      // Users can read and update their own profile.
      allow read, update: if request.auth.uid == userId;
      // Any authenticated user can create their own user document.
      allow create: if request.auth.uid == userId;
    }

    match /holidays/{holidayId} {
      allow read, write: if isAdmin();
      // Any authenticated user can read holidays.
      allow read: if request.auth != null;
    }
    
    match /companies/{companyId} {
      allow read, write: if isAdmin();
      // Any authenticated user can get a specific company's details.
      allow get: if request.auth != null;

      match /settings/{docId} {
        allow read, write: if isAdmin();
        allow read: if request.auth != null;
      }
      match /benefits/{docId} {
        allow read, write: if isAdmin();
        allow read: if request.auth != null;
      }
      match /deductions/{docId} {
        allow read, write: if isAdmin();
        allow read: if request.auth != null;
      }
      match /items/{docId} {
        allow read, write: if isAdmin();
        allow read: if request.auth != null;
      }
      
      match /shifts/{shiftId} {
        allow read, write: if isAdmin();
        // Operators can create their own shifts.
        allow create: if request.resource.data.userId == request.auth.uid;
        // Operators can read, update, or delete their own shifts.
        allow read, update, delete: if resource.data.userId == request.auth.uid;
        // Operators can list shifts within a company (client must filter).
        allow list: if request.auth != null;
      }
      
      match /payrolls/{payrollId} {
        allow read, write: if isAdmin();
        // Operators can read their own payrolls.
        allow read: if resource.data.userId == request.auth.uid;
        // Operators can list payrolls within a company (client must filter).
        allow list: if request.auth != null;
      }
    }
  }
}
