
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Use a specific UID for the admin for better security
    function isAdmin() {
      return request.auth != null && request.auth.uid == '15sJqL2prSVL2adSXRyqsefg26v1';
    }

    // A user can be associated with a company
    function isCompanyMember(companyId) {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId;
    }

    match /users/{userId} {
      allow read, update, delete: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn();
    }

    // Companies can be read by any signed-in user, but only created/updated/deleted by an admin.
    match /companies/{companyId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();

      // Shifts can be created by company members (operators) for themselves.
      // Admins can read all shifts.
      match /shifts/{shiftId} {
          allow read: if isAdmin() || (isCompanyMember(companyId) && resource.data.userId == request.auth.uid);
          allow create: if isCompanyMember(companyId) && request.resource.data.userId == request.auth.uid;
          allow update, delete: if isAdmin();
      }

       // Payrolls can be read by the user they belong to, or by an admin.
      match /payrolls/{payrollId} {
        allow read: if isAdmin() || (isCompanyMember(companyId) && resource.data.userId == request.auth.uid);
        allow write: if isAdmin();
      }
    }
  }
}
