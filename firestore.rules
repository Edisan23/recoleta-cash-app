
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // A user can be associated with a company
    function isCompanyMember(companyId) {
      // This rule is a placeholder. For this fake data app, we'll
      // assume any signed-in user is a member of any company.
      return isSignedIn();
    }

    // This is now a public access app for the admin section.
    function isAdmin() {
      return true;
    }

    match /users/{userId} {
      allow read, update, delete: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn();
    }

    match /companies/{companyId} {
      allow read: if isSignedIn() || isAdmin();
      allow create, update, delete: if isAdmin();

      match /settings/{settingsId} {
          allow read: if isCompanyMember(companyId) || isAdmin();
          allow write: if isAdmin();
      }
      match /items/{itemId} {
          allow read: if isCompanyMember(companyId) || isAdmin();
          allow write: if isAdmin();
      }
       match /benefits/{benefitId} {
          allow read: if isCompanyMember(companyId) || isAdmin();
          allow write: if isAdmin();
      }
       match /deductions/{deductionId} {
          allow read: if isCompanyMember(companyId) || isAdmin();
          allow write: if isAdmin();
      }


      // Shifts can be created by a company member for themselves.
      // They can only read their own shifts. Admins can read all shifts.
      match /shifts/{shiftId} {
          allow read: if isAdmin() || (isCompanyMember(companyId) && resource.data.userId == request.auth.uid);
          allow create: if isCompanyMember(companyId) && request.resource.data.userId == request.auth.uid;
          allow update, delete: if isAdmin() || (isCompanyMember(companyId) && resource.data.userId == request.auth.uid);
      }

       // Payrolls can be read by the user they belong to, or by an admin.
      match /payrolls/{payrollId} {
        allow read: if isAdmin() || (isCompanyMember(companyId) && resource.data.userId == request.auth.uid);
        allow write: if isAdmin();
      }
    }
  }
}
