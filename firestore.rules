rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Global Admin Override ---
    // If the user is the admin, grant full access to everything.
    // This rule is checked first for any path.
    match /{path=**} {
      allow read, write: if request.auth.uid == 'o7bT7yEdWOdxIHgX6lszz19dl7j2';
    }

    // --- Operator Rules ---

    // Operators can create their own user document.
    // Operators can only read and update their own user document.
    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      allow read, update: if request.auth.uid == userId;
    }
    
    // Any authenticated user can read company details and settings.
    match /companies/{companyId} {
      allow get: if request.auth != null;

      // This covers subcollections like settings, benefits, deductions, items
      match /{subcollection}/{docId} {
        allow read: if request.auth != null;
      }
      
      // Operators can manage their own shifts.
      match /shifts/{shiftId} {
        allow create: if request.resource.data.userId == request.auth.uid;
        allow read, update, delete: if resource.data.userId == request.auth.uid;
      }
      
      // Operators can read their own payrolls.
      match /payrolls/{payrollId} {
        allow read: if resource.data.userId == request.auth.uid;
      }
    }

    // Any authenticated user can read the holidays list.
    match /holidays/{holidayId} {
      allow read: if request.auth != null;
    }
  }
}
