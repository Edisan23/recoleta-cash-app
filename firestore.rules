
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isCompanyMember(companyId) {
      // This rule is a placeholder. For this fake data app, we'll
      // assume any signed-in user is a member of any company.
      return isSignedIn();
    }

    function isAdmin() {
      // Admin access is restricted to a specific Google account email.
      return isSignedIn() && request.auth.token.email == 'tjedisan@gmail.com';
    }

    match /users/{userId} {
      allow get, update, delete: if isOwner(userId) || isAdmin();
      allow create: if isSignedIn();
      allow list: if isAdmin();
    }

    match /companies/{companyId} {
      allow get: if isCompanyMember(companyId);
      allow list: if isSignedIn();
      allow create, update, delete: if isAdmin();

      match /settings/{settingsId} {
          allow read: if isCompanyMember(companyId);
          allow write: if isAdmin();
      }
      match /items/{itemId} {
          allow read: if isCompanyMember(companyId);
          allow write: if isAdmin();
      }
       match /benefits/{benefitId} {
          allow read: if isCompanyMember(companyId);
          allow write: if isAdmin();
      }
       match /deductions/{deductionId} {
          allow read: if isCompanyMember(companyId);
          allow write: if isAdmin();
      }

       // Payrolls can be read by the user they belong to, or by an admin.
      match /payrolls/{payrollId} {
        allow get: if isAdmin() || (isCompanyMember(companyId) && resource.data.userId == request.auth.uid);
        allow list: if isAdmin() || (isCompanyMember(companyId) && request.query.filters.size() > 0 && request.query.filters[0].field == 'userId' && request.query.filters[0].value == request.auth.uid);
        allow create, update, delete: if isAdmin();
      }
       // Rules specific to the shifts subcollection under a company
      match /shifts/{shiftId} {
        // This covers operator queries on a specific company's shifts collection
        allow read, write: if isCompanyMember(companyId) && (request.resource.data.userId == request.auth.uid || resource.data.userId == request.auth.uid);
        allow list: if (isCompanyMember(companyId) && request.query.filters.size() > 0 && request.query.filters[0].value == request.auth.uid) || isAdmin();
      }
    }
    
    // This is a collection group query, it applies to all collections named "shifts"
    // This rule allows Admins to perform collection group queries across all 'shifts' collections.
    match /{path=**}/shifts/{shiftId} {
        allow list: if isAdmin();
    }

    match /holidays/{holidayId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
