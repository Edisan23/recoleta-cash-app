rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // A user can be associated with a company
    function isCompanyMember(companyId) {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId;
    }

    match /users/{userId} {
      allow read, update, delete: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn();
    }

    // Companies can be read by any signed-in user.
    // Writes are disallowed from the client for now to prevent tampering.
    match /companies/{companyId} {
      allow read: if isSignedIn();
      allow write: if false; // Protect company data

      // Company subcollections can be read by company members.
      // Writes are disallowed from the client.
      match /settings/{settingsId} {
          allow read: if isSignedIn() && isCompanyMember(companyId);
          allow write: if false;
      }
      match /items/{itemId} {
          allow read: if isSignedIn() && isCompanyMember(companyId);
          allow write: if false;
      }

      // Shifts can be created by company members for themselves.
      // A user can only read their own shifts.
      match /shifts/{shiftId} {
          allow read: if isCompanyMember(companyId) && resource.data.userId == request.auth.uid;
          allow create: if isCompanyMember(companyId) && request.resource.data.userId == request.auth.uid;
          allow update, delete: if false;
      }

       // Payrolls can be read by the user they belong to.
      match /payrolls/{payrollId} {
        allow read: if isCompanyMember(companyId) && resource.data.userId == request.auth.uid;
        allow write: if false;
      }
    }
  }
}
