{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user within the application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user."
        },
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "role": {
          "type": "string",
          "description": "The user's role within the application (e.g., operator, admin).",
          "enum": ["operator", "admin"]
        },
        "companyId": {
            "type": "string",
            "description": "The ID of the company the user belongs to."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user account was created."
        },
        "paymentStatus": {
          "type": "string",
          "description": "The payment status of the user's account.",
          "enum": ["trial", "paid", "blocked"]
        }
      },
      "required": ["id", "name", "email", "role", "createdAt", "paymentStatus"]
    },
    "Company": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Company",
      "type": "object",
      "description": "Represents a company that uses the system.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the company."
        },
        "name": {
          "type": "string",
          "description": "The name of the company."
        },
        "logoUrl": {
          "type": "string",
          "description": "URL of the company's logo.",
          "format": "uri"
        },
        "isActive": {
            "type": "boolean",
            "description": "Whether the company is active or not."
        },
        "themeColor": {
            "type": "string",
            "description": "A hex color code for the company's theme."
        }
      },
      "required": ["id", "name", "isActive"]
    },
    "CompanySettings": {
      "title": "Company Settings",
      "description": "Defines the payment rules, deductions, and special conditions for a company.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "paymentModel": {
            "type": "string",
            "enum": ["hourly", "production"],
            "description": "The payment model for the company."
        },
        "dayRate": { "type": "number" },
        "nightRate": { "type": "number" },
        "dayOvertimeRate": { "type": "number" },
        "nightOvertimeRate": { "type": "number" },
        "holidayDayRate": { "type": "number" },
        "holidayNightRate": { "type": "number" },
        "holidayDayOvertimeRate": { "type": "number" },
        "holidayNightOvertimeRate": { "type": "number" },
        "transportSubsidy": { "type": "number", "description": "Fixed amount for transport subsidy." },
        "otherSubsidies": { "type": "number" },
        "healthDeduction": { "type": "number", "description": "Percentage for health deduction (e.g., 4 for 4%)." },
        "pensionDeduction": { "type": "number", "description": "Percentage for pension deduction (e.g., 4 for 4%)." },
        "arlDeduction": { "type": "number", "description": "Percentage for ARL deduction." },
        "familyCompensationDeduction": { "type": "number", "description": "Percentage for Family Compensation Fund deduction (e.g., 4 for 4%)."},
        "taxWithholding": { "type": "number", "description": "Percentage for tax withholding." },
        "solidarityFundDeduction": { "type": "number", "description": "Percentage for solidarity pension fund." },
        "payrollCycle": {
          "type": "string",
          "enum": ["monthly", "fortnightly"],
          "description": "Defines the company's payroll payment cycle."
        },
        "nightShiftStart": {
          "type": "string",
          "description": "The time when the night shift begins (e.g., '21:00')."
        }
      }
    },
    "OperatorDeductions": {
        "title": "Operator Deductions",
        "description": "Defines voluntary deductions for a specific operator.",
        "type": "object",
        "properties": {
            "userId": { "type": "string" },
            "unionFeeDeduction": { "type": "number", "description": "Fixed amount for union fees." },
            "cooperativeDeduction": { "type": "number", "description": "Fixed amount for cooperative contributions." },
            "loanDeduction": { "type": "number", "description": "Fixed amount for loan payments." }
        },
        "required": ["userId"]
    },
    "CompanyItem": {
      "title": "Company Item",
      "description": "Represents an item for production-based payment (e.g., 'bulto movido') or a special condition for hourly payment.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "value": { "type": "number", "description": "Value per unit for production-based payment."},
        "affectsPayment": { "type": "boolean" },
        "paymentMultiplier": { "type": "number" },
        "extraPerHour": { "type": "number" },
        "requiresSupervisor": { "type": "boolean" }
      },
      "required": ["id", "name"]
    },
    "Shift": {
        "title": "Shift",
        "description": "Represents a single work shift or production entry for a user.",
        "type": "object",
        "properties": {
            "id": { "type": "string" },
            "userId": { "type": "string" },
            "companyId": { "type": "string" },
            "date": { "type": "string", "format": "date-time" },
            "startTime": { "type": "string", "format": "time", "description": "Used for 'hourly' payment model." },
            "endTime": { "type": "string", "format": "time", "description": "Used for 'hourly' payment model." },
            "itemId": { "type": "string", "description": "Used for 'production' payment model to link to a CompanyItem." },
            "quantity": { "type": "number", "description": "Used for 'production' payment model." },
            "supervisor": { "type": "string" }
        },
        "required": ["id", "userId", "companyId", "date"]
    },
    "Payroll": {
        "title": "Payroll",
        "description": "Represents a payroll period for a user.",
        "type": "object",
        "properties": {
            "id": { "type": "string" },
            "userId": { "type": "string" },
            "companyId": { "type": "string" },
            "periodStart": { "type": "string", "format": "date-time" },
            "periodEnd": { "type": "string", "format": "date-time" }
        }
    }
  },
  "auth": {
    "providers": ["password", "anonymous", "google.com"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "schema": { "$ref": "#/entities/User" },
          "description": "Stores user information."
        }
      },
      {
        "path": "/companies/{companyId}",
        "definition": {
          "schema": { "$ref": "#/entities/Company" },
          "description": "Stores company information."
        },
        "subcollections": [
            {
                "path": "settings/{settingsId}",
                "definition": {
                    "schema": { "$ref": "#/entities/CompanySettings" },
                    "description": "Payment rules and settings for the company."
                }
            },
            {
                "path": "items/{itemId}",
                "definition": {
                    "schema": { "$ref": "#/entities/CompanyItem" },
                    "description": "Items for production payment or special conditions for hourly payment."
                }
            },
            {
                "path": "shifts/{shiftId}",
                "definition": {
                    "schema": { "$ref": "#/entities/Shift" },
                    "description": "All shifts for all users in the company."
                }
            },
            {
                "path": "payrolls/{payrollId}",
                "definition": {
                    "schema": { "$ref": "#/entities/Payroll" },
                    "description": "All payrolls for all users in the company."
                }
            },
            {
                "path": "operatorDeductions/{userId}",
                "definition": {
                    "schema": { "$ref": "#/entities/OperatorDeductions" },
                    "description": "Voluntary deductions for a specific operator."
                }
            }
        ]
      }
    ]
  }
}
