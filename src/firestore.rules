rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      // Ensures the user is authenticated and their UID matches the admin UID.
      return request.auth != null && request.auth.uid == 'o7bT7yEdWOdxIHgX6lszz19dl7j2';
    }

    // This rule is critical for collectionGroup queries.
    // It allows the admin to list all shifts across all companies.
    // NOTE: This query may require a composite index to be created in the Firebase console.
    match /{path=**}/shifts/{shiftId} {
      allow list: if isAdmin();
    }
    
    match /users/{userId} {
      // Admin can manage any user. Users can manage their own profile.
      allow read, update, delete: if request.auth.uid == userId || isAdmin();
      // Any authenticated user can create their own user profile document.
      allow create: if request.auth.uid == userId || isAdmin();
      // Only Admin can list all users.
      allow list: if isAdmin();
    }

    match /holidays/{holidayId} {
      // Any authenticated user can read holidays. Only admin can modify them.
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /companies/{companyId} {
      // Any authenticated user can get a specific company's details.
      allow get: if request.auth != null;
      // Only admin can list all companies.
      allow list: if isAdmin();
      // Only admin can create, update, or delete companies.
      allow create, update, delete: if isAdmin();

      // Rules for all subcollections within a company.
      // Admin has full access to all subcollections.
      match /settings/{docId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
      }
      match /benefits/{docId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
      }
      match /deductions/{docId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
      }
      match /items/{docId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
      }
      
      match /shifts/{shiftId} {
        // Operators can create shifts for themselves. Admin can create shifts for anyone.
        allow create: if request.resource.data.userId == request.auth.uid || isAdmin();
        // Operators can read, update, or delete their own shifts. Admin has full access.
        allow read, update, delete: if resource.data.userId == request.auth.uid || isAdmin();
        // Any authenticated user can list shifts in a company.
        // The client MUST filter by userId to ensure an operator only sees their own shifts.
        allow list: if request.auth != null;
      }
      
      match /payrolls/{payrollId} {
        // Operators can read their own payrolls. Admin can read any.
        allow read: if resource.data.userId == request.auth.uid || isAdmin();
        // Only admin can create, update, or delete payrolls.
        allow create, update, delete: if isAdmin();
        // Admin can list all payrolls in a company.
        allow list: if isAdmin();
      }
    }
  }
}
