rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'tjedisan@gmail.com';
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      allow get, update, delete: if isOwner(userId) || isAdmin();
      allow create: if request.auth != null || isAdmin();
      allow list: if isAdmin();
    }

    // Holidays collection
    match /holidays/{holidayId} {
      allow read: if request.auth != null || isAdmin();
      allow write: if isAdmin();
    }
    
    // Companies and their subcollections
    match /companies/{companyId} {
      allow list, get: if request.auth != null || isAdmin();
      allow create, update, delete: if isAdmin();

      match /settings/{docId} {
        allow get: if request.auth != null || isAdmin();
        allow write: if isAdmin();
      }
      match /benefits/{docId} {
        allow get: if request.auth != null || isAdmin();
        allow write: if isAdmin();
      }
      match /deductions/{docId} {
        allow get: if request.auth != null || isAdmin();
        allow write: if isAdmin();
      }
      match /items/{docId} {
        allow get: if request.auth != null || isAdmin();
        allow write: if isAdmin();
      }
      
      match /shifts/{shiftId} {
        allow list: if isAdmin();
        allow read, write: if (request.auth != null && request.resource.data.userId == request.auth.uid) || isAdmin();
      }
      
      match /payrolls/{payrollId} {
        allow list: if isAdmin();
        allow read: if (request.auth != null && resource.data.userId == request.auth.uid) || isAdmin();
        allow write: if isAdmin();
      }
    }
  }
}
