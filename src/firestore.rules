
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isCompanyMember(companyId) {
      // For this app, we assume any signed-in user can be a member.
      // A real app would have a more robust check (e.g., checking a user's companyId field).
      return isSignedIn();
    }

    function isAdmin() {
      // Admin access is restricted to a specific Google account email.
      return isSignedIn() && request.auth.token.email == 'tjedisan@gmail.com';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Admins can read/write any user profile.
      // Users can only read/write their own profile.
      allow read, update, delete: if isAdmin() || isOwner(userId);
      // Any signed-in user can create their own profile.
      allow create: if isSignedIn();
      // Allow admins to list all users for the admin dashboard.
      allow list: if isAdmin();
    }

    // Rules for the 'companies' collection and its subcollections
    match /companies/{companyId} {
      // Any signed-in user can read company data (e.g., for the selection screen).
      allow read: if isSignedIn();
      // Only admins can manage companies.
      allow create, update, delete: if isAdmin();

      match /settings/{settingsId} {
          allow read: if isCompanyMember(companyId);
          allow write: if isAdmin();
      }
      match /items/{itemId} {
          allow read: if isCompanyMember(companyId);
          allow write: if isAdmin();
      }
       match /benefits/{benefitId} {
          allow read: if isCompanyMember(companyId);
          allow write: if isAdmin();
      }
       match /deductions/{deductionId} {
          allow read: if isCompanyMember(companyId);
          allow write: if isAdmin();
      }
      
      // Rules for the 'payrolls' subcollection
      match /payrolls/{payrollId} {
        // An admin can read any payroll. A user can only read their own specific payroll doc.
        allow get: if isAdmin() || (isCompanyMember(companyId) && resource.data.userId == request.auth.uid);
        // Only admins can create/update/delete payrolls through the 'close payroll' action.
        allow write, delete: if isAdmin();
      }
      // Allow admins and relevant users to list payrolls.
      // This must be separate from the `get` rule on the document itself.
      match /payrolls/{payrollId=**} {
        allow list: if isAdmin() || (isCompanyMember(companyId) && request.query.filters[0].value == request.auth.uid);
      }
    }
    
    // Collection Group Query for 'shifts'
    // This rule applies to any subcollection named 'shifts' (e.g., /companies/{companyId}/shifts/{shiftId})
    match /{path=**}/shifts/{shiftId} {
        // An admin can read any shift.
        // A user can read their own shifts if they are part of the company.
        allow read: if isAdmin() || (isCompanyMember(path.split('/')[1]) && resource.data.userId == request.auth.uid);
        allow list: if isAdmin() || (isCompanyMember(path.split('/')[1]) && request.query.filters[0].value == request.auth.uid);
        
        // A user can create their own shifts.
        allow create: if isCompanyMember(path.split('/')[1]) && request.resource.data.userId == request.auth.uid;
        
        // A user can update/delete their own shifts, or an admin can.
        allow update, delete: if isAdmin() || (isCompanyMember(path.split('/')[1]) && resource.data.userId == request.auth.uid);
    }

     match /holidays/{holidayId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
