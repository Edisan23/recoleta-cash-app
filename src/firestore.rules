
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Admin access is restricted to a specific Google account email.
      return isSignedIn() && request.auth.token.email == 'tjedisan@gmail.com';
    }

    // Admins have universal access. This rule is checked first.
    match /{document=**} {
      allow read, write: if isAdmin();
    }
    
    // --- Rules for non-admin users below ---
    
    match /users/{userId} {
      // Non-admins can only get or update their own profile.
      allow get, update: if isOwner(userId);
      // Any signed-in user can create their own user document.
      allow create: if isSignedIn();
    }

    match /companies/{companyId} {
      // Any signed-in user can get or list companies (for the selection screen).
      allow get, list: if isSignedIn();

      // Sub-collection reads are allowed for any signed-in user.
      match /settings/{settingsId} {
          allow read: if isSignedIn();
      }
      match /items/{itemId} {
          allow read: if isSignedIn();
      }
       match /benefits/{benefitId} {
          allow read: if isSignedIn();
      }
       match /deductions/{deductionId} {
          allow read: if isSignedIn();
      }
      
      // Operators can only get their own payrolls, or list them with a query on their user ID.
      match /payrolls/{payrollId} {
        allow get: if resource.data.userId == request.auth.uid;
        allow list: if request.query.where[0].field == 'userId' && request.query.where[0].value == request.auth.uid;
      }

      // Operators can read/write their own shifts, and list them with a query on their user ID.
      match /shifts/{shiftId} {
        allow read, delete: if resource.data.userId == request.auth.uid;
        allow create, update: if request.resource.data.userId == request.auth.uid;
        allow list: if request.query.where[0].value == request.auth.uid;
      }
    }

    // Any signed-in user can read the holidays list.
    match /holidays/{holidayId} {
      allow read: if isSignedIn();
    }
  }
}
