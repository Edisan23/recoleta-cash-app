rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // The admin UID is hardcoded for security.
    function isAdmin() {
      return request.auth != null && request.auth.uid == '15sJqL2prSVL2adSXRyqsefg26v1';
    }

    // Only the admin user document can be created or accessed by the admin.
    match /users/{userId} {
      allow read, write: if isAdmin() && request.auth.uid == userId;
    }

    // All company data can only be accessed and modified by the admin.
    match /companies/{companyId} {
      allow read, write: if isAdmin();

      // All subcollections are also admin-only.
      match /{allChildren=**} {
        allow read, write: if isAdmin();
      }
    }
  }
}
